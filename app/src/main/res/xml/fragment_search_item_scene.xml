<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/content_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            motion:layout_constraintTop_toBottomOf="@+id/list_category_search" />
        <Constraint android:id="@+id/no_results">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/product_count">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/title_search_results">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/content_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint android:id="@+id/no_results">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/title_search_results">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/product_count">
            <PropertySet
                motion:applyMotionScene="false"
                motion:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/content_products"
            motion:touchAnchorSide="middle" />
    </Transition>
</MotionScene>
