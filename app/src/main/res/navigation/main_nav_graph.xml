<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.idslogic.levelshoes.ui.home.landing.LandingFragment"
        android:label="LandingFragment"
        tools:layout="@layout/fragment_landing">
        <action
            android:id="@+id/nav_from_home_to_product_list"
            app:destination="@id/product_list_graph" />
    </fragment>
    <fragment
        android:id="@+id/nav_a_z"
        android:name="com.idslogic.levelshoes.ui.home.atoz.AToZFragment"
        android:label="fragment_a_to_z"
        tools:layout="@layout/fragment_a_to_z" />
    <fragment
        android:id="@+id/nav_account"
        android:name="com.idslogic.levelshoes.ui.home.myaccount.MyAccountFragment"
        android:label="fragment_my_account"
        tools:layout="@layout/fragment_my_account" />
    <fragment
        android:id="@+id/nav_shopping_bag"
        android:name="com.idslogic.levelshoes.ui.home.shoppingbag.ShoppingBagFragment"
        android:label="fragment_shopping_bag"
        tools:layout="@layout/fragment_shopping_bag" />
    <fragment
        android:id="@+id/nav_search"
        android:name="com.idslogic.levelshoes.ui.home.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/fragment_search" />
    <navigation
        android:id="@+id/product_list_graph"
        app:startDestination="@id/product_list">
        <fragment
            android:id="@+id/product_list"
            android:name="com.idslogic.levelshoes.ui.home.product.ProductListFragment"
            android:label="ProductsListFragment"
            tools:layout="@layout/fragment_product_list" />
    </navigation>
</navigation>