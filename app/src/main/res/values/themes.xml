<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/whiteSmokeColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:statusBarColor">@color/light_gray</item>
        <item name="android:colorEdgeEffect">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OnboardingTheme" parent="Theme.BaseProject">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TransparentStatusTheme" parent="Theme.BaseProject">
        <!--<item name="android:statusBarColor">@color/white</item>
        <item name="statusBarScrim">@color/white</item>
        <item name="statusBarBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
    </style>

    <style name="FullScreenTheme" parent="Theme.BaseProject">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppLauncher.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dodger_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <color name="primaryButtonDefault">@color/black</color>
    <color name="primaryButtonDisabled">@color/gray_78</color>
    <color name="primaryButtonPressed">@color/black_panther</color>
    <color name="textOnPrimaryDisabled">@color/white</color>
    <color name="textOnPrimaryEnabled">@color/white</color>

    <color name="primaryButtonOnDarkDefault">@color/white</color>
    <color name="primaryButtonOnDarkDisabled">@color/gray_78</color>
    <color name="primaryButtonOnDarkPressed">@color/gray_78</color>
    <color name="textOnPrimaryDarkPressed">@color/black</color>
    <color name="textOnPrimaryOnDarkDisabled">@color/white</color>
    <color name="textOnPrimaryOnDarkEnabled">@color/black</color>

    <color name="secondaryButtonDefault">@android:color/transparent</color>
    <color name="secondaryButtonDisabled">@color/gray_78</color>
    <color name="secondaryButtonPressed">@color/gray_88</color>
    <color name="textOnSecondaryButton">@color/secondary_button_text_colors</color>
    <color name="textOnSecondaryDisabled">@color/white</color>
    <color name="textOnSecondaryEnabled">@color/black</color>
    <color name="secondaryButtonStrokeColor">@color/black</color>

    <color name="hintTextColor">@color/charcoal</color>
    <color name="textOnSurface">@color/black</color>
    <color name="textOnSurfaceReverse">@color/white</color>
    <color name="background">@color/white</color>
    <color name="backgroundReverse">@color/black</color>
    <color name="iconTintOnSurface">@color/black</color>
    <color name="iconTintOnSurfaceReverse">@color/white</color>

    <color name="hintTextColorOnDark">@color/gray_78</color>

    <color name="dropdownTextDefault">@color/black</color>
