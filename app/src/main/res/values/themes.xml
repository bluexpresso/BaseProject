    <color name="tabIndicatorColorOnSurface">@color/black</color>
    <color name="plpLabelBackgroundColor">@color/whiteSmokeColor</color>
    <color name="toolbarColor">@color/white</color>
    <color name="toolbarColorDark">@color/black</color>
    <color name="toolbarContentOnDark">@color/white</color>
    <color name="toolbarContentColor">@color/black</color>
    <color name="dialogBackground">@color/white</color>
