<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="@dimen/spacing_40">



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/additional_product_width"
            android:layout_height="@dimen/ordered_product_height"
            android:layout_marginStart="@dimen/spacing_24"
            android:transitionName="product_transition_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/brand"
            style="@style/TextLabelBrandSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_24"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ALEXANDER MCQUEEN

" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            style="@style/TextBodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            app:textAllCaps="true"
            android:textAlignment="viewStart"
            android:textColor="@color/textOnSurface"
            android:textDirection="locale"
            android:layout_marginHorizontal="@dimen/spacing_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/brand"
            tools:text="File Sneakers" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/price"
            style="@style/TextPriceBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="@color/textOnSurface"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/brand"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="11AED" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/size"
            style="@style/TextPriceBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_72"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="@color/textOnSurface"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/brand"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="Size:38" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quantity"
            style="@style/TextPriceBig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="@color/textOnSurface"
            android:textDirection="locale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/brand"
            app:layout_constraintTop_toBottomOf="@id/size"
            tools:text="Qty:1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>