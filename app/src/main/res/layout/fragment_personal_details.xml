<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        tools:context="ui.home.atoz.AToZFragment">

        <com.idslogic.levelshoes.utils.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@drawable/ic_arrow_left_alt_24dp_black"
            app:titleText="@string/personal_details" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.home.atoz.AToZFragment">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/general_information"
                    style="@style/TextHeading4.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_40"
                    android:text="@string/information_help"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input"
                    style="@style/InputDropDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/title"
                    app:endIconDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:endIconTint="@color/dropdown_item_color_states"
                    app:hintAnimationEnabled="false"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/general_information">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/choose_title_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:dropDownAnchor="@id/underline"
                        android:dropDownHeight="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextBodySmallRegular"
                        android:textColor="@color/dropdown_text_color_states"
                        android:textColorHint="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/underline"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:background="@drawable/dropdown_item_color_states"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_input" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstname_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/first_name"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/underline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstname_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/spacing_32"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextBodySmall2"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastname_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/last_name"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/firstname_input">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastname_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/spacing_32"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextBodySmall2"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobilenumber_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/mobile_number"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastname_input">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mobilenumber_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/spacing_32"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextBodySmall2"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/email"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mobilenumber_input">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/spacing_32"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextBodySmall2"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/gender_input"
                    style="@style/InputDropDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/gender"
                    app:endIconDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:endIconTint="@color/dropdown_item_color_states"
                    app:hintAnimationEnabled="false"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_input">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/gender_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:dropDownAnchor="@id/underline_gender"
                        android:dropDownHeight="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextBodySmallRegular"
                        android:textColor="@color/dropdown_text_color_states"
                        android:textColorHint="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:id="@+id/underline_gender"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:background="@drawable/dropdown_item_color_states"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender_input" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthday_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:hint="@string/birthday"
                    app:endIconDrawable="@drawable/ic_baseline_calendar_today_24"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender_input">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthday_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:inputType="text"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/spacing_32"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextBodySmall2"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>


                <View
                    android:id="@+id/view_mask_dob"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/birthday_input"
                    app:layout_constraintEnd_toEndOf="@id/birthday_input"
                    app:layout_constraintStart_toStartOf="@id/birthday_input"
                    app:layout_constraintTop_toTopOf="@id/birthday_input" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_changes_button"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_64"
                    android:textAllCaps="true"
                    android:text="@string/save_changes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthday_input" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/security_information"
                    style="@style/TextHeading4.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_56"
                    android:text="@string/security_information"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/save_changes_button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_password_button"
                    style="@style/SecondaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_32"
                    android:textAllCaps="true"
                    android:textColor="@color/textOnSurface"
                    android:text="@string/change_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/security_information" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/address_book"
                    style="@style/TextHeading4.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_60"
                    android:text="@string/address_book"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/change_password_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/background_mask"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/gray_98"
                    app:layout_constraintTop_toTopOf="@+id/home"
                    app:layout_constraintEnd_toEndOf="@+id/address_edit_input"
                    app:layout_constraintBottom_toBottomOf="@id/edit_your_address"
                    app:layout_constraintStart_toStartOf="@id/home"/>



                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/home"
                    style="@style/TextHeading4.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_60"
                    android:text="@string/home"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_book" />



                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/default_textview"
                    style="@style/TextHeading4.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_60"
                    android:background="@color/black_11"
                    android:textColor="@color/white"
                    android:text="@string/default_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home"
                    app:layout_constraintTop_toBottomOf="@+id/address_book" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/address_edit_input"
                    style="@style/InputEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_12"
                    app:hintAnimationEnabled="false"
                    app:hintTextAppearance="@style/TextBodySmall"
                    app:hintTextColor="@color/hintTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:inputType="textMultiLine"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextBodySmall2"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"

                   />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/edit_your_address"
                    style="@style/TextBodySmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_20"
                    android:text="@string/edit_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_edit_input" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/remove"
                    style="@style/TextBodySmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_20"
                    android:text="@string/remove"
                    app:layout_constraintStart_toEndOf="@+id/edit_your_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_edit_input" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_new_address_button"
                    style="@style/SecondaryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_56"
                    android:layout_marginBottom="@dimen/spacing_32"
                    android:textAllCaps="true"
                    android:textColor="@color/textOnSurface"
                    android:text="@string/add_new_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/background_mask" />









            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>