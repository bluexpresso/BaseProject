<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_sort_by_relevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/sort_by_relevance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sort_by_relevance"
            app:tint="@color/white"
            app:useMaterialThemeColors="true" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sort_by_relevance"
            style="@style/TextHeading4.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg_on_light"
            android:paddingHorizontal="@dimen/spacing_32"
            android:paddingVertical="@dimen/spacing_16"
            android:text="@string/relevance"
            android:textColor="@color/black_11"
            app:layout_constraintEnd_toStartOf="@id/btn_sort_by_relevance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_sort_by_relevance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColorOnSurfaceReverse"
            app:layout_constraintTop_toBottomOf="@id/sort_by_relevance" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sort_by_newest_first"
            style="@style/TextHeading4.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg_on_light"
            android:paddingHorizontal="@dimen/spacing_32"
            android:paddingVertical="@dimen/spacing_16"
            android:text="@string/newest_first"
            android:textColor="@color/black_11"
            app:layout_constraintEnd_toStartOf="@id/btn_sort_by_newest_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sort_by_relevance" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_sort_by_newest_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/sort_by_newest_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sort_by_newest_first"
            app:tint="@color/white"
            app:useMaterialThemeColors="true" />

        <View
            android:id="@+id/divider_sort_by_newest_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColorOnSurfaceReverse"
            app:layout_constraintTop_toBottomOf="@id/sort_by_newest_first" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sort_by_lowest_price"
            style="@style/TextHeading4.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg_on_light"
            android:paddingHorizontal="@dimen/spacing_32"
            android:paddingVertical="@dimen/spacing_16"
            android:text="@string/lowest_price"
            android:textColor="@color/black_11"
            app:layout_constraintEnd_toStartOf="@id/btn_sort_by_lowest_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_sort_by_newest_first" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_sort_by_lowest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/sort_by_lowest_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sort_by_lowest_price"
            app:tint="@color/white"
            app:useMaterialThemeColors="true" />

        <View
            android:id="@+id/divider_sort_by_lowest_price"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColorOnSurfaceReverse"
            app:layout_constraintTop_toBottomOf="@id/sort_by_lowest_price" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sort_by_highest_price"
            style="@style/TextHeading4.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg_on_light"
            android:paddingHorizontal="@dimen/spacing_32"
            android:paddingVertical="@dimen/spacing_16"
            android:text="@string/highest_price"
            android:textColor="@color/black_11"
            app:layout_constraintEnd_toStartOf="@id/btn_sort_by_highest_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_sort_by_lowest_price" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_sort_by_highest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/sort_by_highest_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sort_by_highest_price"
            app:tint="@color/white"
            app:useMaterialThemeColors="true" />

        <View
            android:id="@+id/divider_sort_by_highest_price"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColorOnSurfaceReverse"
            app:layout_constraintTop_toBottomOf="@id/sort_by_lowest_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>