<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_32">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/spacing_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/plp_image_dimension"
                    android:layout_height="@dimen/plp_image_dimension"
                    android:layout_marginHorizontal="@dimen/spacing_12"
                    android:layout_marginBottom="@dimen/spacing_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_tags"
                    tools:src="@tools:sample/avatars" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/view_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:layout_marginTop="@dimen/spacing_12"
                    app:chipSpacingHorizontal="@dimen/spacing_4"
                    app:chipSpacingVertical="@dimen/spacing_4"
                    app:flow_horizontalGap="0dp"
                    app:flow_wrapMode="chain"
                    app:layout_constraintEnd_toStartOf="@id/btn_bookmark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/chip_sale"
                        style="@style/TextLabelChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SALE" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/chip_new"
                        style="@style/TextLabelChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SALE" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/chip_unisex"
                        style="@style/TextLabelChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="SALE" />
                </com.google.android.material.chip.ChipGroup>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_wishlist_black_24dp"
                    android:tint="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/brand"
            style="@style/TextLabelBrandSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            app:layout_constraintStart_toStartOf="@id/card_content"
            app:layout_constraintTop_toBottomOf="@id/card_content"
            tools:text="FILA" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            style="@style/TextTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card_content"
            app:layout_constraintTop_toBottomOf="@id/brand"
            tools:text="FILA" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/price"
            style="@style/TextPriceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_4"
            app:layout_constraintStart_toStartOf="@id/card_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="123 AED" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>