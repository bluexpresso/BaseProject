<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="categorySearch"
            type="com.idslogic.levelshoes.data.models.CategorySearch" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/spacing_32">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            style="@style/TextBodySmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacing_16"
            android:text="@{categorySearch.name}"
            android:textColor="@color/textOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/selected_filter"
            tools:text="New In" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/selected_filter"
            style="@style/TextBodySmall2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacing_16"
            android:singleLine="true"
            android:text="@{categorySearch.name}"
            android:textColor="@color/textOnSurface"
            app:layout_constraintEnd_toStartOf="@+id/arrow_next"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewEnd"
            android:ellipsize="marquee"
            android:paddingStart="@dimen/spacing_12"
            tools:text="(1) Women women women women women women wome" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/arrow_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/selected_filter"
            android:tint="@color/iconTintOnSurface"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_panther"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>